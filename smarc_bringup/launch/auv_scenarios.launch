<launch>

	<!-- Underwater scenario for Gazebo -->
	<include file="$(find smarc_worlds)/launch/ekf_localization_tests.launch"/>

	<!-- Mode flags -->
	<arg name="auv_name" default="lolo_auv"/>
	<arg name="navigation_on" value="true"/>

	<!-- Initial position of the AUV -->
	<arg name="x" value="0.0"/>
	<arg name="y" value="10.0"/>
	<arg name="z" value="-90.0"/>
	<arg name="yaw" value="0.0"/>

	<!-- Launch LoLo AUV -->
	<include file="$(find smarc_auvs)/models/$(arg auv_name)/launch/upload_lolo_auv.launch" pass_all_args="true"/>

	<!-- Publishes: - tf world to odom based on initial pose of the AUV 
					- Ground truth pose in odom frame -->
    <node pkg="odom_tf_bc" name="odom_tf_bc_node" type="odom_tf_bc_node" output="screen">
	      <param name="gt_topic" value="/$(arg auv_name)/pose_gt"/>
	      <param name="parent_frame" value="world"/>
	      <param name="child_frame" value="odom"/>
	      <param name="base_frame" value="$(arg auv_name)/base_link"/>
	      <param name="bc_odom_tf" value="$(arg navigation_on)"/>
		  <!-- <param name="base_link" value="world"/> -->
	      <param name="gt_odom_topic" value="gt_in_odom"/>
    </node>

	<!-- Keyboard controller -->
	<node pkg="smarc_keyboard_teleop" type="lolo_auv_teleop.py" name="lolo_auv_teleop" output="screen"/>
	
	<!-- Navigation components -->
  	<include file="$(find auv_ekf_localization)/launch/ekf_localization.launch">
  		<arg name="run_navigation" value="$(arg navigation_on)"/>
	</include>

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find smarc_bringup)/rviz/pipe_following.rviz"/>

</launch>